@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Cosmetic_Store.Models.Category

<h3>Create a new Category</h3>

<form asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data">
  <partial name="_CategoryFields"></partial>

        <div style="padding-bottom:20px;margin:20px">
            <label asp-for="@Model.Logo">Image</label>
            <input asp-for="@Model.Logo" type="file" action="/images/*"/>
        </div>  
        <div  >
            <button type="submit" style="background-color:green;width: 70px;color: white;"> Create </button>
        </div>
        <a asp-controller = "Category" asp-action= "Index"> Back</a>

</form>

<div asp-validation-summary="All"></div>