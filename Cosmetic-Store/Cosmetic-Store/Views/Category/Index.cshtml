@model IEnumerable<Cosmetic_Store.Models.Category>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<button style="position:fixed; right:25px; bottom:25px; background-color:forestgreen; height:50px"><a style="color:aliceblue" asp-controller = "Category" asp-action= "Create"> Create New Category</a></button>

<hr />
<div style="display:flex;justify-content: space-between;flex-wrap: wrap;">
    
        @foreach (var item in Model)
        {
            <a asp-controller = "Category" asp-action= "Detail" asp-route-id ="@item.CategoryId" >
            <div>
                <img src="@item.Logo" style=" width: 300px; height:280px"/>
                <ul >
                    <li>
                        <h1>@item.Name</h1>
                    </li>
                </ul>
            </div>
            </a>   
        }
</div>
    

    