@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css"/>
    <style>
        nav 
        {
            display: inline-flex;
            justify-content: space-around;
            align-content: space-around;
            align-items: flex-end;
            background-color: #292230;
            width: 100%;
            height: 80px;
        }
        a{
            text-decoration:none;
        }
        li{
            list-style-type: none;
        }
        ul.list 
        {
            display: flex;
            justify-content: space-evenly;
        }
        h1{
            padding-left: 25px
        }
    </style>
</head>
<body>
    <nav >
        <h1 style="color:aliceblue">Cosmetic Store</h1>
        <ul class="list">
            <li ><a style="color:aliceblue" asp-controller="Category" asp-action="Index"><h1>Categories</h1></a></li>
            <li class="pro" ><a style="color:aliceblue" asp-controller="Product" asp-action="Index"><h1>Products</h1></a></li>
        </ul>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
