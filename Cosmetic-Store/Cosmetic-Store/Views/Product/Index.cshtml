@model IEnumerable<Cosmetic_Store.Models.Product>  
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<button style="position:fixed; right:25px; bottom:25px; background-color:forestgreen; height:50px"><a style="color:aliceblue" asp-controller = "Product" asp-action= "Create">Create New Product</a></button>



<div style="display:flex;justify-content: space-between;flex-wrap: wrap;">
    @foreach (var item in Model)
    {
        <a asp-controller = "Product" asp-action= "Detail" asp-route-id =@item.ProductId >
        <div style="padding-bottom:50px">
            <img src="@item.ImageURL" style=" width: 300px; height:280px"/>
            <ul>
                <li>
                    <h3>@item.Name</h3>
                </li>
            </ul>
        </div>
        </a>
    }
</div>

