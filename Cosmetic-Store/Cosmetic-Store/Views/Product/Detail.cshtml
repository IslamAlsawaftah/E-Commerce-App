@model Cosmetic_Store.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    
<h1>Detail of Prduct</h1>
     <div>
        <img style=" width: 300px; height:280px" src="@Model.ImageURL" />
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <h4>@Model.Price JD</h4>
     </div>

<button><a asp-controller = "Product" asp-action= "Index" >Back</a></button> 
<button><a asp-controller = "Product" asp-action= "Edit" asp-route-id ="@Model.ProductId">Edit</a></button>
<button><a asp-controller = "Product" asp-action= "Delete" asp-route-id ="@Model.ProductId">Delete</a></button>